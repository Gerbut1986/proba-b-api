<Window x:Class="BinanceOptionsApp.StringValueDialog"
               xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BinanceOptionApp"
        mc:Ignorable="d"
        Title="" MinHeight="80" Width="320" SizeToContent="Height"
        Loaded="Window_Loaded" Closing="Window_Closing" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBox x:Name="value" Margin="3"></TextBox>
        <StackPanel Grid.Row="1" Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="10">
            <Button MinWidth="80" IsDefault="True" x:Name="buAccept" Click="BuAccept_Click">Accept</Button>
            <Button MinWidth="80" IsCancel="True" Margin="5,0,0,0" x:Name="buCancel" Click="BuCancel_Click">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>